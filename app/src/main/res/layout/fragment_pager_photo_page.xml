<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    app:layout_constraintVertical_bias="0.95"
    tools:context=".PagerPhotoPage">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/pagerTag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pagerTag"
        app:layout_constraintTop_toTopOf="@+id/pagerTag"
        app:srcCompat="@drawable/save_btn_img" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/veiwPager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/pagerTag"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/pagerTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        android:text="@string/hello_blank_fragment"
        android:textAlignment="center"
        android:textColor="#F5EFEF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/veiwPager2" />

</androidx.constraintlayout.widget.ConstraintLayout>